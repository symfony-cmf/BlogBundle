<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="cmf_blog.blog_admin" class="%cmf_blog.phpcr.blog_admin.class%">
            <tag
                name="sonata.admin"
                manager_type="doctrine_phpcr"
                group="dashboard.group_blog"
                label_catalogue="CmfBlogBundle"
                label="dashboard.label_blog"
                label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_blog.phpcr.blog.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <argument>%cmf_blog.blog_basepath%</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>
        </service>

        <service id="cmf_blog.post_admin" class="%cmf_blog.phpcr.post_admin.class%">
            <tag
                name="sonata.admin"
                manager_type="doctrine_phpcr"
                group="dashboard.group_blog"
                label_catalogue="CmfBlogBundle"
                label="dashboard.label_post"
                label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_blog.phpcr.post.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <argument>%cmf_blog.phpcr.blog.class%</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>
        </service>
    </services>
</container>
