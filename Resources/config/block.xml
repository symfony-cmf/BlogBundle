<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="symfony_cmf_blog.block.tag_cloud" class="Symfony\Cmf\Bundle\BlogBundle\Block\TagCloudBlockService">
            <tag name="sonata.block" />
            <argument>symfony_cmf_blog.block.tag_cloud</argument>
            <argument type="service" id="templating" />
            <!-- Hardcode PHPCR strategy for now - inefficient, but it works !-->
            <argument type="service" id="symfony_cmf_blog.tagging_strategy_phpcr"/>
        </service>

    </services>

</container>




