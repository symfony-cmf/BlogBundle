<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="cmf_blog.blog_repository"
                 class="Doctrine\Common\Persistence\ObjectRepository"
                 factory-service="doctrine_phpcr"
                 factory-method="getRepository">
            <argument>%cmf_blog.phpcr.blog.class%</argument>
            <call method="setBasepath">
                <argument>%cmf_blog.blog_basepath%</argument>
            </call>
        </service>

        <service id="cmf_blog.post_repository"
                 class="Doctrine\Common\Persistence\ObjectRepository"
                 factory-service="doctrine_phpcr"
                 factory-method="getRepository">
            <argument>%cmf_blog.phpcr.post.class%</argument>
        </service>

    </services>

</container>
