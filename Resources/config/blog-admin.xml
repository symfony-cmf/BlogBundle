<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symfony_cmf_blog.blog_admin_class"></parameter>
        <parameter key="symfony_cmf_blog.post_admin_class"></parameter>
        <parameter key="symfony_cmf_blog.blog_class"></parameter>
        <parameter key="symfony_cmf_blog.post_class"></parameter>
    </parameters>

    <services>

        <service id="symfony_cmf_blog.admin" class="%symfony_cmf_blog.blog_admin_class%">
            <tag 
                name="sonata.admin" 
                manager_type="doctrine_phpcr" 
                group="dashboard.group_blog" 
                label_catalogue="SymfonyCmfBlogBundle" 
                label="dashboard.label_blog" 
                label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%symfony_cmf_blog.blog_class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

           <call method="setBlogRoot">
                <argument>%symfony_cmf_blog.blog_basepath%</argument>
            </call>
        </service>

        <service id="symfony_cmf_post.admin" class="%symfony_cmf_blog.post_admin_class%">
            <tag 
                name="sonata.admin" 
                manager_type="doctrine_phpcr" 
                group="dashboard.group_blog" 
                label_catalogue="SymfonyCmfBlogBundle" 
                label="dashboard.label_post" 
                label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%symfony_cmf_blog.post_class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>
        </service>
    </services>
</container>
